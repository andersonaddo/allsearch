  <ShortName>Allsearch</ShortName>
  <Description>A webpage that makes it easier to try other search engines</Description>
  <InputEncoding>UTF-8</InputEncoding>
  <Image width="16" height="16" type="image/x-icon">https://allsear.ch/favicon.ico</Image>
  <Url type="text/html" method="get" template="https://allsear.ch/search?q={searchTerms}" />
  <moz:SearchForm>https://allsear.ch/search</moz:SearchForm>
</OpenSearchDescription>
